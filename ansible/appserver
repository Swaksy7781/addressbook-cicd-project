---
- name: Configure app server
  hosts: app_servers
  become: yes

  tasks:
    - name: Update apt cache and upgrade packages
      apt:
        update_cache: yes
        upgrade: dist

    - name: install Java
      apt:
        name: openjdk-17-jdk
        state: present

    - name: install tomcat
      apt:
        name: tomcat9
        state: present
      notify:
        - Start Tomcat9

  handlers:
    - name: Start Tomcat
      service:
        name: tomcat9
        state: started
        enabloed: yes



    